<% if @shelter %>
      <h1><%= "#{@shelter.name}'s Pets" %><h1>
   <% else %>
      <h1>All Pets<h1>
<% end %>
 <% @pets.each do |pet|  %>
    <%= image_tag(pet.image) %>
    <p>Name: <%=  pet.name  %><p> 
    <p>Approximate Age: <%=  pet.approximate_age  %><p> 
    <p>Sex: <%=  pet.sex  %><p> 
    <p>Shelter: <%=  pet.shelter.name  %><p> 
 <% end %>
<% if @shelter %>
      <%= link_to  "Create Pet", new_shelter_pet_path %>
<% end %>
 